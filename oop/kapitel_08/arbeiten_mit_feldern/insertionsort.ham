int [] sortiereFeld( int [] feld  ) {

        //		lokale Variablen
        int i;
        int j;
        int temp;
        int test_sort;

        for(i  = 1; i < feld.length; i++) {

                temp = feld [ i ];
                j = i;
                while ( j > 0 &&  feld [ j - 1 ]  > temp ) {

                        feld [ j ] = feld [ j - 1 ];	// hier findet der iegentliche Tausch statt
                        j--;
                }
                feld [ j ] = temp;
        }
        return feld;
}